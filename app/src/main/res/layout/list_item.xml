<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tan_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan_background"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/myImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_item_height"
            android:minWidth="@dimen/list_item_height"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/wordsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/category_numbers"
            android:gravity="center"
            android:minHeight="@dimen/list_item_height"
            android:minWidth="@dimen/list_item_height"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/listItemJapan"
                style="@style/ListStyleBold"
                tools:text="JapaneseSample" />

            <TextView
                android:id="@+id/listItemEn"
                style="@style/ListStyle"
                tools:text="EnSample" />
        </LinearLayout>

        <ImageView

            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/category_numbers"
            android:minHeight="@dimen/list_item_height"
            android:minWidth="@dimen/list_item_arrow_width"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/sharp_play_arrow_white_24dp" />

    </LinearLayout>

</LinearLayout>

